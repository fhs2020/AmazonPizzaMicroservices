@model IEnumerable<AmazonPizza.Web.Models.ProductsDto>

<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Product list</h1>
        </div>
        <div class="col text-end-0 pt-1">
            <a asp-action="Create" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Create new Product</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @((item.Price).ToString("c"))
                    </td>
                    <td>
                        <a asp-action="EditProduct" class="btn alert-success" asp-route-productId="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="DeleteProduct" class="btn alert-danger" asp-route-productId="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
         
                </tr>

            }
        </tbody>
    </table>
</div>


